{
    "name": "topics",
    "dockerComposeFile": "docker-compose.yml",
    "service": "topics",
    "workspaceFolder": "/topics",

    "postCreateCommand": "pip3 install --user -r .devcontainer/requirements.txt",

    "customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"ms-python.vscode-pylance"
			]
		}
	}
}